{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": ".vercel/output",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "api/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "src",
    "frontend",
    "dist"
  ]
}
